<!DOCTYPE html>
<html>
<head>
  <title>PhotoTagger</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render partial: "layouts/header" %>

<div class="container">
	<% if flash[:errors].present? %>
		<div class="errors">
			<ul>
			<% flash[:errors].try(:each) do |error| %>
				<li><%= error %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<%= yield %>
</div>

</body>
</html>
