<h1>Sign Up</h1>
<form action="<%= users_url %>" method="POST">
	<label for="username">Username</label><br>
	<input id="username" name="user[username]" value="<%= @user.username %>"><br>

	<label for="password">Password</label><br>
	<input type="password" id="password" name="user[password]"><br>

	<label for="password_confirmation">Confirm Password</label><br>
	<input type="password" id="password_confirmation" name="user[password_confirmation]"><br>

	<%= render partial: "shared/csrf" %><br>
	<input type="submit" value="Sign Up">
</form> 