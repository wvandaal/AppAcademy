<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= csrf_meta_tags %>
</head>
<body>

  <% flash[:errors].try(:each) do |error| %>
    <p style="color:red"><%= error %></p>
  <% end %>

  <h1><%= link_to "Music App", root_url %></h1>

  <% if logged_in? %>
    <p>Logged in as <%= current_user.email %></p>
    <%= button_to "Logout", session_url, :method => :delete %>
    <%= button_to "Delete Account", user_url, :method => :delete %>
  <% else %>
    <%= button_to "Login", new_session_url, :method => :get %>
    <%= button_to "Register", new_user_url, :method => :get %>
  <% end %>

  <%= yield %>

</body>
</html>


