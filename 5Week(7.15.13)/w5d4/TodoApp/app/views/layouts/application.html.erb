<!DOCTYPE html>
<html>
<head>
  <title>TodoApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if flash[:errors].present? %>
	<div class="errors">
		<ul>
		<% flash[:errors].try(:each) do |error| %>
			<li><%= error %></li>
		<% end %>
		</ul>
	</div>
<% end %>

<%= yield %>

</body>
</html>
