<h2><%= @post.title %></h2>
<%= link_to "Edit Post", edit_post_path(@post) if @post.user == current_user %>
<h3><%= @post.user.username %></h3>
<p><%= @post.body %></p>

<h3>Tags</h3>
<ul><%= @post.tags.try(:each) do |tag| %>
	<li><%= tag.name %><%= button_to "Remove Tag", tag_path(tag), method: :delete %></li>
	<%end%>
</ul>

<h3>Add Tag</h3>
<%= render partial: 'tags/form', locals: {path: tags_path, method: "post" } %>

